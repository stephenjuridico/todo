{
  "name": "Todo",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "android": "react-native run-android",
    "ios": "react-native run-ios",
    "start": "react-native start",
    "clean:all": "rm -rf /tmp/metro-* && rm -rf node_modules && rm -rf package-lock.json && rm -rf yarn.lock && cd ios/ && rm -rf Pods/ && rm -rf Podfile.lock",
    "clean": "rm -rf /tmp/metro-* && rm -rf node_modules && cd ios/ && rm -rf Pods/",
    "reinstall": "yarn install && cd ios/ && pod install --repo-update",
    "test": "jest --forceExit",
    "test:clearCache": "jest --clearCache",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watchAll",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint-fix": "eslint --fix . --ext .js,.jsx,.ts,.tsx"
  },
  "dependencies": {
    "@react-native-async-storage/async-storage": "^1.17.11",
    "@react-navigation/native": "^6.1.2",
    "@react-navigation/native-stack": "^6.9.8",
    "@types/react-native-get-random-values": "^1.8.0",
    "@types/react-native-vector-icons": "^6.4.13",
    "formik": "^2.2.9",
    "moment": "^2.29.4",
    "native-base": "^3.4.25",
    "ramda": "^0.28.0",
    "react": "18.2.0",
    "react-native": "0.71.1",
    "react-native-alert-notification": "^0.3.4",
    "react-native-get-random-values": "^1.8.0",
    "react-native-safe-area-context": "^3.3.2",
    "react-native-screens": "^3.19.0",
    "react-native-svg": "12.1.1",
    "react-native-vector-icons": "^9.2.0",
    "uuid": "^9.0.0",
    "yup": "^0.32.11"
  },
  "devDependencies": {
    "@babel/core": "^7.20.0",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/preset-env": "^7.20.0",
    "@babel/preset-typescript": "^7.18.6",
    "@babel/runtime": "^7.20.0",
    "@jest/globals": "^29.4.1",
    "@react-native-community/eslint-config": "^3.0.0",
    "@testing-library/jest-native": "^5.4.1",
    "@testing-library/react-hooks": "^8.0.1",
    "@testing-library/react-native": "^11.5.1",
    "@tsconfig/react-native": "^2.0.2",
    "@types/jest": "^29.2.1",
    "@types/ramda": "^0.28.22",
    "@types/react": "^18.0.24",
    "@types/react-test-renderer": "^18.0.0",
    "@types/uuid": "^9.0.0",
    "babel-jest": "^29.2.1",
    "babel-plugin-module-resolver": "^5.0.0",
    "eslint": "^8.19.0",
    "jest": "^29.2.1",
    "metro-react-native-babel-preset": "0.73.7",
    "prettier": "^2.4.1",
    "react-test-renderer": "18.2.0",
    "ts-jest": "^29.0.5",
    "typescript": "4.8.4"
  },
  "jest": {
    "preset": "react-native",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "setupFiles": [
      "<rootDir>/__mocks__/index.js"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/jest-setup.js"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!(jest-)?(@react-native|react-native)|react-(native|universal|navigation)-(.*)|@react-native-community/(.*)|@react-navigation/(.*)|bs-platform)"
    ],
    "transform": {
      "^.+\\.jsx?$": "babel-jest"
    }
  }
}
